<div class="basic-grey">
<p id="notice"><%= notice %></p>

<h1><%= "#{t('message.listing')} #{@kinds.model.model_name.human(count: @kinds.count)}"%></h1>

<table>
  <thead>
    <tr>
      <th><%= @kinds.model.human_attribute_name("description") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr style="background: <%= cycle('white', '#f0f0f5') %>">
        <td><%= kind.description %></td>
        <td><%= link_to t('buttons.show'), kind %></td>
        <td><%= link_to t('buttons.edit'), edit_kind_path(kind) %></td>
        <td><%= link_to t('buttons.destroy'), kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.new'), new_kind_path, class: "button" %>
<%= link_to t('buttons.back'), home_bemvindo_path, class: "button"%>
</div>