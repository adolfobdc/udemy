<div class="basic-grey">
<p id="notice"><%= notice %></p>

<h1><%= "#{t('message.listing')} #{@phones.model.model_name.human(count: @phones.count)}"%></h1>
<table>
  <thead>
    <tr>
      <th><%= @phones.model.human_attribute_name("phones")%></th>
      <th><%= @phones.model.human_attribute_name("contact.name")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr style="background: <%= cycle('white', '#f0f0f5') %>">
        <td><%= phone.phone %></td>
        <td><%= phone.contact.name %></td>
        <td><%= link_to t('buttons.show'), phone %></td>
        <td><%= link_to t('buttons.edit'), edit_phone_path(phone) %></td>
        <td><%= link_to t('buttons.destroy'), phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  
  <%= paginate @phones %>
  
<br>


<%= link_to t('buttons.new'), new_phone_path, class: "button" %>
<%= link_to t('buttons.back'), home_bemvindo_path, class: "button"%>
</div>